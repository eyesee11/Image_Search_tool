{
  "name": "mern-image-search-oauth",
  "version": "1.0.0",
  "description": "Full-stack MERN application with OAuth authentication and image search",
  "main": "server/server.js",
  "scripts": {
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm run build",
    "start": "cd server && npm start"
  },
  "keywords": [
    "mern",
    "oauth",
    "passport",
    "react",
    "express",
    "mongodb",
    "unsplash",
    "image-search",
    "authentication"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
